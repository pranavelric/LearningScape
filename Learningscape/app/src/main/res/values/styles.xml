<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bs_bottomSheetStyle">@style/BottomSheet.StyleDialog</item>
    </style>



    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">#DDffffff</item>
        <item name="android:textColorSecondary">#8Affffff</item>
        <item name="android:textColorHint">#42ffffff</item>
        <item name="bs_dialogBackground">@drawable/splash_bg</item>
        <item name="bs_dividerColor">#B1B1B1</item>
        <item name="bs_numColumns">2</item>


    </style>




    <style name="shapableImg" parent="Theme.MaterialComponents.NoActionBar">
     <item name="cornerSizeTopLeft">12dp</item>
  <item name="cornerSizeTopRight">12dp</item>

    </style>


    <style name="LoginUIStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/login_background</item>
    </style>


</resources>